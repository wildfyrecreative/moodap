<% content_for :page_title do %>
  <ol class="aui-nav aui-nav-breadcrumbs">
    <li><%= link_to "Locations", locations_path %></li>
  </ol>
  <h1><%=@location.name%></h1>
<% end %>

<% content_for :page_header_image do %>
  <%= image_tag "project-avatar-blue-48@2x.png" %>
<% end %>

<% content_for :page_actions do %>
  <div class="aui-buttons">
    <%= link_to 'Edit', edit_location_path(@location), :class => 'aui-button' %>
    <%= link_to 'View votes', votes_path(:location_id => @location.id), :class => 'aui-button' %>
    <%= link_to 'Destroy', @location, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'aui-button aui-button-link' %>
  </div>
<% end %>

<%= render :partial => 'layouts/notifications'%>

<p>
  <b>Geography:</b>
  <%= @location.geography %>
</p>

<p>
  <b>Survey:</b>
  <% if @location.survey %>
    <%= link_to @location.survey.name, @location.survey %>
  <% else %>
    <span class="aui-lozenge aui-lozenge-error aui-lozenge-subtle">NO SURVEY</span>
  <% end %>
</p>

<p>
  <b>Active:</b>
  <%= @location.active %>
</p>

<p>
  <b>Inactive text:</b>
  <%= @location.inactive_text%>
</p>

