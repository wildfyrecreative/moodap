<% content_for :page_title do %>
  <h1>Locations</h1>
<% end %>

<% content_for :page_header_image do %>
  <%= image_tag "project-avatar-blue-48@2x.png" %>
<% end %>

<% if @locations.size > 0 %>

  <% content_for :page_actions do %>
    <div class="aui-buttons">
      <%= link_to 'New Location', new_location_path, :class => 'aui-button' %>
      <%= link_to 'Bulk Edit', bulk_edit_locations_path, :class => 'aui-button' %>
    </div>
  <% end %>

  <%= render :partial => 'layouts/notifications'%>

  <%= render :partial => 'index_locations' %>
<% else %>
  <%= render :partial => 'index_nolocations' %>
<% end %>

