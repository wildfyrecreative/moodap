<% content_for :page_title do %>
  <h1>Surveys</h1>
<% end %>

<% content_for :page_header_image do %>
  <%= image_tag "project-avatar-orange-48@2x.png" %>
<% end %>

<% if @surveys.size > 0 %>
  <% content_for :page_actions do %>
  <%= link_to 'New Survey', new_survey_path, :class => 'aui-button' %>
  <% end %>

  <%= render :partial => 'layouts/notifications'%>
  
  <%= render :partial => 'index_surveys' %>

<% else %>

  <%= render :partial => 'index_nosurveys' %>

<% end %>