<% content_for :aui_layout do %>
  <body class="ui-layout aui-theme-default aui-page-focused aui-page-focused-medium">  
<% end %>

<h2>Forgot your password?</h2>

<%= render :partial => 'layouts/notifications'%>

<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :class => 'aui' }) do |f| %>
  <%= devise_error_messages! %>
  <fieldset>
    <div class="field-group">
      <%= f.label :email %>
      <%= f.email_field :email, :autofocus => true, :class => 'text' %>
    </div>
  </fieldset>
  <div class="buttons-container">
    <div class="buttons">
      <%= f.submit "Send my password", :class => 'aui-button aui-button-primary' %>
      <%= link_to "Cancel", :back, :class => 'aui-button aui-button-link' %>
    </div>
  </div>
<% end %>
