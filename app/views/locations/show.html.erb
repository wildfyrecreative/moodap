<% content_for :page_title do %>
  <h1>Locations: <%=@location.name%></h1>
<% end %>

<% content_for :page_actions do %>
<%= link_to 'Edit', edit_location_path(@location), :class => 'aui-button' %>
<%= link_to 'Destroy', @location, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'aui-button aui-button-link' %>
<% end %>

<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @location.name %>
</p>

<p>
  <b>Geography:</b>
  <%= @location.geography %>
</p>

<p>
  <b>Active:</b>
  <%= @location.active %>
</p>

<p>
  <b>Inactive text:</b>
  <%= @location.inactive_text%>
</p>

