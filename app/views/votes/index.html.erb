<% content_for :page_title do %>
  <h1>Votes</h1>
<% end %>

<% content_for :page_actions do %>
  <%= link_to 'Download results', current_url(:format => :csv), :class => 'aui-button' %>
<% end %>

<% if @survey %>
  <h2>Filtered on survey <strong><%= @survey.name %></strong></h2>
<% end %>
<% if @location %>
  <h2>Filtered on location <strong><%= @location.name %></strong></h2>
<% end %>
<table class="aui">
  <thead>
    <tr>
      <th>Score</th>
      <th>Location</th>
      <th>Survey</th>
      <th>Created at</th>
    </tr>
  </thead>
  <tbody>
  <% @votes.each do |vote| %>
    <tr>
      <td><%= vote.label %></td>
      <td><%= vote.location.name %></td>
      <td><%= vote.survey.name %></td>
      <td><%=l vote.created_at, :format => :short %></td>
    </tr>
  <% end %>
  </tbody>
</table>


